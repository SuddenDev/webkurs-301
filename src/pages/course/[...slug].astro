---
import BaseLayout from '@/layouts/BaseLayout.astro'
import type { Course } from '@/types'
import { getCourses } from '@/utils/posts'
import { render } from 'astro:content'

export async function getStaticPaths() {
  const posts = await getCourses()
  return posts.map((post) => {
    return {
      params: { slug: post.id },
      props: {
        post,
      },
    }
  })
}

type Props = { post: Course }

const { post } = Astro.props
const { title, image, description, date } = post.data

const { Content } = await render(post)

function getDate(date: string) {
  return new Date(date).toISOString()
}
---

<BaseLayout title={title} description={description} pageType="article">
  <article class="prose">
    <h1>{title}</h1>
    <p op-50>
      {date && <time datetime={getDate(date)}>{date.split(',')}</time>}
    </p>
    {
      image && (
        <p>
          <img width="640" height="360" src={image.src} alt={image.alt || ''} />
        </p>
      )
    }
    <Content />
  </article>
</BaseLayout>
